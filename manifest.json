{
    "manifest_version": 3,
    "name": "Clipboard Translator",
    "version": "1.0",
    "description": "Translate text from clipboard using Flask server.",
    "permissions": ["clipboardRead", "clipboardWrite", "activeTab", "scripting", "storage", "tabs", "offscreen"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["contentScript.js"]
        }
      ],    
    "commands": {
        "translate-clipboard": {
            "suggested_key": {
                "windows": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y",
                "chromeos": "Ctrl+Shift+U",
                "linux": "Ctrl+Shift+J"
            },
            "description": "Translate text from clipboard"
        }
    },
    "icons": {
        "48": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}
